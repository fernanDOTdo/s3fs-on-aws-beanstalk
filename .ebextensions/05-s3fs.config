packages:
  yum:
    gcc: []
    libstdc++-devel: []
    gcc-c++: []
    fuse: []
    fuse-devel: []
    libcurl: []
    libcurl-devel: []
    libxml2-devel: []
    openssl-devel: []
    mailcap: []
sources:
  /home/ec2-user/: http://s3fs.googlecode.com/files/s3fs-1.72.tar.gz
files:
  "/etc/fuse.conf" :
    owner: root
    group: root
    content: |
      # mount_max = 1000
      user_allow_other
  "/opt/elasticbeanstalk/hooks/appdeploy/pre/11_unmount_s3fs.sh" :
    mode: "000744"
    owner: root
    group: root
    content: |
      #!/usr/bin/env bash
      . /opt/elasticbeanstalk/support/envvars
      chmod 744 $EB_CONFIG_APP_ONDECK/s3fs/*.php
      if [ -f $EB_CONFIG_APP_ONDECK/s3fs/unmount-all-s3fs.php ]
        then
          $EB_CONFIG_APP_ONDECK/s3fs/unmount-all-s3fs.php
      fi
commands:
  configure_s3fs:
    command: ./configure --prefix=/usr
    cwd: /home/ec2-user/s3fs-1.72
  make_s3fs:
    command: make
    cwd: /home/ec2-user/s3fs-1.72
  install_s3fs:
    command: make install
    cwd: /home/ec2-user/s3fs-1.72
container_commands:
  credentials:
    command: /var/app/ondeck/s3fs/create-s3fs-credentials-file.php
  mount_s3fs:
    command: /var/app/ondeck/s3fs/mount-s3fs-folders.php
